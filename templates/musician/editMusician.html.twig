{% extends 'base.html.twig' %}

{% block title %}ApoSongs | Modification de {{first}} {% if nick %}'{{nick}}'{% endif %}{{last}}{% endblock %}

{% block body %}


<div class="col-lg-10 mx-auto mt-3 mt-md-0">
    {{ form_start(form) }}
    <h2>Modification de {{first}} {% if nick %}'{{nick}}'{% endif %}{{last}}</h2>

    <hr>

    <h3>Éléments obligatoires signalés par *</h3>

    {{form_row(form.firstName)}}
    {{form_row(form.musicianImg)}}
    {{form_row(form.altImg)}}
    {{form_row(form.save)}}
    <hr>

    {{ form_end(form) }}
</div>

    
{% endblock %}

{% block customScript %}
