{% extends 'base.html.twig' %}

{% block title %}ApoSongs | Liste des artistes{% endblock %}

{% block body %}

    <table class="table d-none d-lg-block">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Voir</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{artist.name}}</td>
                <td><a class="btn btn-primary" href="{{path('artist_read', {slug : artist.slug})}}">Voir</a></td>
                <td><a class="btn btn-warning" href="{{path('artist_edit',{slug : artist.slug})}}">Modifier</a></td>
                <td><a class="btn btn-danger" href="{{path('admin_artist_delete',{'id' : artist.id})}}">Supprimer</a></td>



            </tr>            
        {% endfor %}

        </tbody>
    
    </table>

    <div class="container mt-3 mt-md-0 mb-md-0 mb-3">
        {% for artist in artists %}
            <div class="row">
                <div class="col d-block d-lg-none mb-3 bg-light">
                    <h3>{{artist.name}}</h3>
                    <div class="row">
                        <div class="col">
                            <a class="btn btn-primary" href="{{path('artist_read', {slug : artist.slug})}}">Voir</a>
                            <a class="btn btn-warning" href="{{path('artist_edit',{slug : artist.slug})}}">Modifier</a>
                            <a class="btn btn-danger" href="{{path('admin_artist_delete',{'id' : artist.id})}}">Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="row">
            <div class="mx-auto">
                {{ knp_pagination_render(artists, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}
