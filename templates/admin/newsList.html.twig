{% extends 'base.html.twig' %}

{% block title %}ApoSongs | Liste des news{% endblock %}

{% block body %}

    <table class="table d-none d-lg-block">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Date</th>
                <th>Edit√©</th>
                <th>Voir</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            
        </thead>
        <tbody>
        {% for new in news %}
            <tr>
                <td>{{new.title}}</td>
                <td>{{new.author}}</td>
                <td>{{new.creationDate|date("Y-m-d H:i:s")|format_datetime('full', 'short', locale='fr')}}</td>
                <td>
                    {% if new.updateAuthor %}Oui par {{new.updateAuthor}} le {{new.updateDate|date("Y-m-d H:i:s")|format_datetime('full', 'short', locale='fr')}}
                    {% else %}
                        non
                    {% endif %}
                </td>
                <td><a class="btn btn-primary" href="{{path('news_read', {id: new.id})}}">Voir</a></td>
                <td><a class="btn btn-warning" href="{{path('news_edit', {id : new.id})}}">Modifier</a></td>
                <td><a class="btn btn-danger" href="{{path('admin_news_delete',{id : new.id})}}">Supprimer</a></td>



            </tr>            
        {% endfor %}

        </tbody>
    
    </table>

    <div class="container mt-3 mt-md-0 mb-md-0 mb-3">
        {% for new in news %}
            <div class="row">
                <div class="col d-block d-lg-none mb-3 bg-light">
                    <h3>{{new.title}}</h3>
                    <div class="row">
                        <div class="col">
                            <a class="btn btn-primary" href="{{path('news_read', {id: new.id})}}">Voir</a>
                            <a class="btn btn-warning" href="{{path('news_edit', {id : new.id})}}">Modifier</a>
                            <a class="btn btn-danger" href="{{path('admin_news_delete',{id : new.id})}}">Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="row">
            <div class="mx-auto">
                {{ knp_pagination_render(news, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}
