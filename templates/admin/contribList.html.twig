{% extends 'base.html.twig' %}

{% block title %}ApoSongs | Liste des news{% endblock %}

{% block body %}

    <table class="table d-none d-lg-block">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Cat√©gorie</th>
                <th>Type de contribution</th>
                <th>Voir</th>
            </tr>
            
        </thead>
        <tbody>
        {% for contrib in contribs %}
            <tr>
                <td>{{contrib.name}}</td>
                <td>{{contrib.category}}</td>
                <td>{{contrib.contributionType}}</td>
                <td>
                    {% if contrib.category == 'artist' %}
                        <a href="{{path(contrib.category ~ '_edit',{'slug': contrib.redirect})}}" class="btn btn-primary">Voir</a>
                    {% elseif contrib.category == "disc" %}
                        <a href="{{path(contrib.category ~ '_edit',{'id': contrib.redirect})}}" class="btn btn-primary">Voir</a>
                    {% else %}
                        <a href="{{path(contrib.category ~ '_edit',{'id': contrib.redirect})}}" class="btn btn-primary">Voir</a>
                    {% endif %}
                </td>


            </tr>            
        {% endfor %}

        </tbody>
    
    </table>

    <div class="container mt-3 mt-md-0 mb-md-0 mb-3">
        {% for contrib in contribs %}
            <div class="row">
                <div class="col d-block d-lg-none mb-3 bg-light">
                    <h3>{{contrib.name}}</h3>
                    <p>{{contrib.category}}</p>
                    <p>{{contrib.contributionType}}</p>
                    <div class="row">
                        <div class="col">
                            {% if contrib.category == 'artist' %}
                                <a href="{{path(contrib.category ~ '_edit',{'slug': contrib.redirect})}}" class="btn btn-primary">Voir</a>
                            {% elseif contrib.category == "disc" %}
                                <a href="{{path(contrib.category ~ '_edit',{'id': contrib.redirect})}}" class="btn btn-primary">Voir</a>
                            {% else %}
                                <a href="{{path(contrib.category ~ '_edit',{'id': contrib.redirect})}}" class="btn btn-primary">Voir</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="row">
            <div class="mx-auto">
                {{ knp_pagination_render(contribs, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}
