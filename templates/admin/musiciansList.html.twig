{% extends 'base.html.twig' %}

{% block title %}ApoSongs | Liste personalit√©es {% endblock %}

{% block body %}

    <table class="table d-none d-lg-block">
        <thead>
            <tr>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Surnom</th>
                <th>Voir</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            
        </thead>
        <tbody>
        {% for musician in musicians %}
            <tr>
                <td>{{musician.firstName}}</td>
                <td>{{musician.LastName}}</td>
                <td>{{musician.Nickname}}</td>
                <td><a class="btn btn-primary" href="{{path('musician_read', {'id' : musician.id})}}">Voir</a></td>
                <td><a class="btn btn-warning" href="{{path('musician_edit',{'id' : musician.id})}}">Modifier</a></td>
                <td><a class="btn btn-danger" href="{{path('admin_musician_delete',{'id' : musician.id})}}">Supprimer</a></td>



            </tr>            
        {% endfor %}

        </tbody>
    
    </table>

    <div class="container mt-3 mt-md-0 mb-md-0 mb-3">
        {% for musician in musicians %}
            <div class="row">
                <div class="col d-block d-lg-none mb-3 bg-light">
                    <h3>{{musician.Nickname}} {{musician.firstName}} {{musician.LastName}}</h3>
                    <div class="row">
                        <div class="col">
                            <a class="btn btn-primary" href="{{path('musician_read', {'id' : musician.id})}}">Voir</a>
                            <a class="btn btn-warning" href="{{path('musician_edit',{'id' : musician.id})}}">Modifier</a>
                            <a class="btn btn-danger" href="{{path('admin_musician_delete',{'id' : musician.id})}}">Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="row">
            <div class="mx-auto">
                {{ knp_pagination_render(musicians, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}
