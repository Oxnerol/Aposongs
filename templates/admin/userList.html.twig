{% extends 'base.html.twig' %}

{% block title %}ApoSongs | Liste des utilisateurs{% endblock %}

{% block body %}

    <table class="table d-none d-lg-block">
        <thead>
            <tr>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Role</th>
                <th>Compte Verifi√©</th>
                <th>Voir</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{user.username}}</td>
                <td>{{user.email}}</td>
                {% for role in user.roles %}
                        <td>{{role}}</td>
                {% endfor %}
                {% if user.isVerified %}
                    <td>Verifier</td>
                {% else %}
                    <td>Non verifier</td>      
                {% endif %}
                <td><a class="btn btn-primary" href="{{path('admin_user_profil',{'id':user.id})}}">Voir</a></td>
                <td><a class="btn btn-warning" href="{{path('admin_user_prodil_edit',{'id' : user.id})}}">Modifier</a></td>
                <td><a class="btn btn-danger" href="{{path('admin_user_profil_delete',{'id' : user.id})}}">Supprimer</a></td>



            </tr>            
        {% endfor %}

        </tbody>
    
    </table>

    <div class="container mt-3 mt-md-0 mb-md-0 mb-3">
        {% for user in users %}
            <div class="row">
                <div class="col d-block d-lg-none mb-3 bg-light">
                    <h3>{{user.username}}</h3>
                    <p>{{user.email}}</p>
                    {% for role in user.roles %}
                        <p>{{role}}</p>
                    {% endfor %}
                    {% if user.isVerified %}
                        <p>Verifier</p>
                    {% else %}
                        <p>Non verifier</p>      
                    {% endif %}
                    <div class="row">
                        <div class="col">
                            <a class="btn btn-primary" href="{{path('admin_user_profil',{'id':user.id})}}">Voir</a>
                            <a class="btn btn-warning" href="{{path('admin_user_prodil_edit',{'id' : user.id})}}">Modifier</a>
                            <a class="btn btn-danger" href="{{path('admin_user_profil_delete',{'id' : user.id})}}">Supprimer</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="row">
            <div class="mx-auto ">
                {{ knp_pagination_render(users, '@KnpPaginator/Pagination/twitter_bootstrap_v4_pagination.html.twig') }}
            </div>
        </div>
    </div>




{% endblock %}
