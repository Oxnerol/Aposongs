<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}ApoSongs{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            
        {% endblock %}
    </head>
    <body>
{# ----------- Header + Navbar ----------- #}
        <header>
            <div class="container-fluid bg-danger">
                <div class="row mx-5">
                    <div class="col">
                        {{ include ('_partials/_header.html.twig')}}
                    </div>
                </div>

                <div class="row mx-lg-5">
                    <div class="col px-0">
                        {{ include ('_partials/_menu.html.twig')}}
                    </div>
                </div>
                {% if is_granted('ROLE_EDITOR')%}
                    <div class="row mx-lg-5">
                        <div class="col px-0">
                            {{ include ('_partials/_adminMenu.html.twig')}}
                        </div>
                    </div>
                {% endif %}
            </div>

            
        </header>

{# ----------- Body of site ----------- #}

        <article class="bg-lightgreen">
            <div class="container-fluid">
                <div class="row mx-md-5 py-md-3">
                    {% block body %}  {% endblock %}
                </div>
            </div>
        </article>
        
{# ----------- Footer ----------- #}

        <footer class="bg-warning">
            <div class="container-fluid">
                <div class="row mx-5">
                    <div class="col">
                        {{ include ('_partials/_footer.html.twig')}}
                    </div>
                </div>
            </div>
        </footer>

        {% block javascripts %}
        
            {{ include ('_partials/_scripts.html.twig')}}
        
        {% endblock %}

{# ----------- Block used dor CustomScript  ----------- #}
        {% block customScript %}
            
        {% endblock %}
    </body>
</html>
